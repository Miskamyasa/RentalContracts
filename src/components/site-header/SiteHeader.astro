---
import Auth from "../auth/Auth"
import Logo from "../logo/Logo.astro"
import SiteMenu from "../site-menu/SiteMenu.astro"

import HeaderLoader from "./HeaderLoader"

---
<div class="shrink-0 sticky top-0 mb-2 lg:mb-3 ">
  <div class="absolute z-10 w-full h-4 bg-gray-50" />
  <header class="relative top-2 z-20 container row overflow-hidden h-14 rounded-lg shadow-md bg-sky-600 text-sky-50">
    <Logo />
    <SiteMenu />
    <div class="flex gap-3">
      <HeaderLoader client:load />
      <Auth client:idle />
    </div>
  </header>
</div>
