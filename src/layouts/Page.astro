---
import BaseHead from "../components/Layout/BaseHead.astro"


export interface Props {
  title?: string
}

const {title} = Astro.props

---

<!DOCTYPE html>
<html lang="en">
  <BaseHead title={title} />
  <body>
    <slot name="body"/>
  </body>
</html>

<style>
  :root {
  }

  html {
    font-family: system-ui, sans-serif;
    font-size: 100%;
    color: #333;
    background-color: #F0F4F5;
  }

  body {
    margin: 0;
  }

  :global(h1) {
    font-size: 1.61rem;
  }

  :global(h2) {
    font-size: 1.21rem;
  }
</style>
