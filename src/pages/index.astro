---
import Counter from "../components/Counter/Counter"
import PageLayout from "../layouts/Page.astro"
import {getRecordBySlug} from "../pocketbase/pocketbase"


const content = await getRecordBySlug("posts", "/")

---
<PageLayout description={content?.description}>
  <main slot="body">
    <div set:html={content?.text} />

    <Counter client:visible>
      <h1>Hello, Solid!</h1>
    </Counter>
  </main>

  <!-- TODO: partytown -->
